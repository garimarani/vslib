<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
	
<hibernate-mapping default-lazy="false">

	<class name="org.vsfamily.vslib.manager.domain.Manager" table="org_vsfamily_vslib_manager_manager">
		<id name="id" column="f_id" type="long">
			<generator class="increment" />
		</id>
		<property
			name="uid"
			column="f_uid"
			type="string"
			not-null="true"
			unique="true"
			length="20"
			/>
		<many-to-one
			name="salutation"
			column="f_salutation"
			class="org.vsfamily.common.domain.Salutation"
			not-null="true"
			/>
		<property
			name="firstName"
			column="f_first_name"
			type="string"
			not-null="true"
			length="50"
			/>
		<property
			name="middleName"
			column="f_middle_name"
			type="string"
			length="50"
			/>
		<property
			name="lastName"
			column="f_last_name"
			type="string"
			length="50"
			not-null="true"
			/>
		<many-to-one
			name="address"
			column="f_address"
			class="org.vsfamily.common.domain.Address"
			not-null="true"
			cascade="all"
			/>
		<property
			name="email"
			column="f_email"
			type="string"
			length="255"
			/>
		<property
			name="password"
			column="f_password"
			type="string"
			length="255"
			not-null="true"
			/>
		<property
			name="accountNonLocked"
			column="f_account_non_locked"
			type="boolean"
			not-null="true"
			/>
		<property
			name="accountNonExpired"
			column="f_account_non_expired"
			type="boolean"
			not-null="true"
			/>
		<property
			name="enabled"
			column="f_enabled"
			type="boolean"
			not-null="true"
			/>
			
		<property
			name="addDate"
			column="f_add_date"
			not-null="true"
			/>
		<property
			name="updateDate"
			column="f_update_date"
			not-null="true"
			/>
		<property 
			name="recordAddedBy"
			column="f_record_added_by"
			type="string"
			length="20"
			not-null="true"
			/>
		<property 
			name="recordUpdatedBy"
			column="f_record_updated_by"
			type="string"
			length="20"
			not-null="true"
			/>
	</class>
</hibernate-mapping>